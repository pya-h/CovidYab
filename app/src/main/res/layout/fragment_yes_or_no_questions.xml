<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/normal_padding"
    tools:context=".YesOrNoQuestionsFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/normal_padding"
        android:text="@string/quiz_yes_no_questions_notice"
        android:gravity="center_horizontal" />

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="@dimen/normal_margin"
        android:layout_marginBottom="@dimen/normal_margin"
        android:background="@android:color/darker_gray" />
    <Button
        android:id="@+id/question_text_field"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/edit_text_margin"
        android:paddingVertical="@dimen/yes_no_question_text_vertical_padding"
        android:textColor="@color/design_default_color_primary"
        android:textSize="@dimen/yes_or_no_questions_text_size"

        app:cornerRadius="@dimen/normal_border_radius"
        tools:ignore="SpeakableTextPresentCheck" />

</LinearLayout>